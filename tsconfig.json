{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "baseUrl": "src",
        "target": "ESNext",
        "lib": ["es2015", "DOM", "ESNext"],
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "noEmitOnError": true
    },
    "include": ["src", "vite.config.ts"],
    "exclude": ["bin/", "src/test"]
}
